<% include ../partials/header %>
<% include ../partials/navbar %>
<style>
    .col-xs-6 ul , .row ul {
        /*border:0.5px solid aliceBlue;*/
        text-align: center;
        margin: 0;
        border-radius:4px;
    }
    .col-xs-6 h4{
        /*border:0.5px solid aliceBlue;*/
    }
    .col-xs-12 li{
        text-align:center;
        padding:20px 5px;
        width:100%;
    }
    hr{
        margin:0;
    }
    .row{
        margin-bottom:20px;
        /*background-color: rgba(30,30,200,0.2);*/
    }
    h4 , h3{
        text-align: center;
    }
    h4 a{
        font-weight:bold;
    }
    .thumbnail{
        box-shadow:rgba(0,0,0,0.3) 0.5px 1px 4px
        ,rgba(0,0,0,0.2) 0.5px 1px 9px;
    }
    .col-xs-6 .col-xs-6{
        padding-right:0;
        padding-left:0;
    }
    .col-xs-12 .thumbnail{
        margin-right:auto;
        margin-left:auto;    
    }
    .col-xs-6 .thumbnail{
        margin-right:auto;
        margin-left:auto;
    } 
    .game-card{
        /*width:98px;*/
    }
    .thumbnail{
        width:108px;
        /*margin-left:auto;*/
        /*margin-right:auto;*/
        padding :0;
    }
    .col-xs-6 , .col-xs-12{
        
    }
    .winner {
        background-color:#66ff66;
    }
    .loser{
        background-color:#ff8080;
    }
    .lower-li{
        border-bottom-left-radius:4px;
        border-bottom-right-radius:4px;
    }
    .upper-li{
        border-top-left-radius:4px;
        border-top-right-radius:4px;
    }
</style>
<div class= "container">
    <div class = "jumbotron">
        <%if(tournament) tournament.rounds.forEach(function(round){%>
            <div class='row'>
                <div class='col-xs-12 center-block'>
                    <%function createNodes(index,content,i){
                    if (index ==4){ %>
                    <div  class='col-xs-6'>
                        <div class ="thumbnail">
                            <h4><a href = '#'>8th of Final</a></h4>
                        </div>
                    </div>
                    <div  class='col-xs-6'>
                        <div class ="thumbnail">
                            <h4><a href = '#'>8th of Final</a></h4>
                        </div>
                    </div>
                    <% }else if(index > 0){ %>
                    
                    <div class='col-xs-6'>
                    <% createNodes(index-1,content,2*i); %>
                    </div>
                    <div class='col-xs-6'>
                    <% createNodes(index-1,content,2*i+1); %>
                    </div>
                    <%}
                    else{%>
                    <div class = "thumbnail">
                        <ul class= 'game-card list-inline'>
                            <li class="<%if(round.games[i].winner === 0){%>winner<%}else{%>loser<%}%> upper-li"><%=round.games[i].player1.name%></li>
                            <hr>
                            <li class="<%if(round.games[i].winner === 1){%>winner<%}else{%>loser<%}%> lower-li"><%=round.games[i].player2.name%></li>
                        </ul>
                    </div>
                    <%}
                    }
                    var roundCols =Math.log(round.games.length)/Math.log(2);
                    createNodes(roundCols,round.games,0);
                    %>
                </div>
            </div>
        <%});%>
        <h3>THE WINNER IS <big><%= winner.toUpperCase()%>!!!</big></h3>
        <%if(tournament){%><form action="/tournaments/<%=tournament._id%>?_method=DELETE" method="post">
            <button class ="btn btn-xs btn-danger">delete</button>
        </form> 
        <%}%>
    </div><!--jumbotron-->
</div><!--container-->



<% include ../partials/footer %>
